<% include ../partials/header %>
<div class = "container-fluid maincontainer sfont"  style = "background-color:rgba(255,255,255,0.7);color: rgba(128,128,128,0.9) !important;">
	<div class = "row" style = "padding:6% 0;">	
	<h1 class = "loginSection" style = "margin-top:1em !important">Create a New Post</h1>
		<form class="form-horizontal loginSection" action = "/foods" method = "POST" enctype = "multipart/form-data">
			<div class = "form-group row">
				<input class="form-control" type="text" name = "food[name]"  placeholder = "name">
			</div>
			<div class = "form-group">
				<div class = "radio">
					<label class = "col-md-3 col-sm-3 col-xs-3" style = "margin:0">
						<input type = "radio" name = "food[kind]" value = "food"> Food
					</label>
					<div class = "col-md-9 col-sm-9 col-xs-9">
						<input class="form-control" type="text" name = "food[ingredient]" placeholder = "ingredient">
					</div>
				</div>
				<p></p>
				<div class = "radio">
					<label class = "col-md-3 col-sm-3 col-xs-3" style = "margin:0">
						<input type = "radio" name = "food[kind]" value = "photo"> Photo
					</label>
					<div class = "col-md-9 col-sm-9 col-xs-9">
						<input class="form-control" type="text" name = "food[location]" placeholder = "location">
					</div>
				</div>
			</div>
			<div class="form-group">
				<label class = "col-md-3 col-sm-3 col-xs-3" style = "margin:0" for="image">Image</label>
				<div class = "col-md-9 col-sm-9 col-xs-9">
					<input type="file" id="image" name="image" accept="image/*" required>
				</div>
			</div>
			<div class = "form-group">
				<label>Description</label>
				<textarea class="form-control" type="text" name = "food[description]"  rows = "3"></textarea>
			</div>
			<div class = "form-group">
				<button class= "btn btn-lg btn-default btn-block">Submit!</button>	<!-- btn-block has the button use same width, primay makes blue  -->
			</div>
		</form>
	</div>
</div>
<% include ../partials/footer %>