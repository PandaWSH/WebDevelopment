<% include ../partials/header %>
<!-- navbar section is in the header.ejs file-->
<script style = "text/javascript">
function toggle_food() {
	var ef = document.getElementById("ShowFoodSection");
	var ep = document.getElementById("ShowPhotoSection");
	if(ef.style.display === "none") {
		ef.style.display = "block";
		ep.style.display = "none";
	} else {
		ef.style.display = "none";
	}
};
function toggle_photo() {
	var ep = document.getElementById("ShowPhotoSection");
	var ef = document.getElementById("ShowFoodSection");
	if(ep.style.display === "none") {
		ep.style.display = "block";
		ef.style.display = "none";
	} else {
		ep.style.display = "none";
	}
};	
</script>

