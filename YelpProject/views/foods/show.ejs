<% include ../partials/header %>

<h1><%= food.name%></h1>

<img src = "<%= food.image %>">

<p><%=food.description %></p>

<p>
	<a class = "btn btn-success" href="/foods/<%= food._id %>/comments/new">Comment</a>	 
</p>
<% food.comments.forEach(function(comment){ %>
	<p><%= comment.author %> - <%= comment.text %></p>
<% }) %>

