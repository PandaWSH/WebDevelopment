<% include ../partials/header %>
<div class = "container-fluid maincontainer sfont" style = "background-color:rgba(255,255,255,0.7);padding-bottom:4%; color:rgba(128,128,128,0.9)"> 
	<div class = "row" style = "padding-top:6%;">	
	<h1 style = "text-align:center">Edit <%= food.name %></h1>
		<div style = "width:30%; margin:30px auto;">
			<form action = "/foods/<%= food._id %>?_method=PUT" method = "POST" enctype="multipart/form-data">
				<div class = "form-group">
					<label>Name</label>
					<input class="form-control" type="text" name = "food[name]"  value = "<%= food.name %>">
				</div>
				<% if(food.ingredient) { %> 
					<div class = "form-group">
						<label>Ingredient</label>
						<input class="form-control" type="text" name = "food[ingredient]"  value = "<%= food.ingredient %>">
					</div>
				<% } %>
				<% if(food.location) { %> 
					<div class = "form-group">
						<label>Location</label>
						<input class="form-control" type="text" name = "food[location]"  value = "<%= food.location %>">
					</div>
				<% } %>
				<div class = "form-group">
					<label>Description</label>
					<textarea class="form-control" type="text" name = "food[description]"  rows = "3"> <%= food.description %> </textarea>
				</div>
				<div class = "form-group">
					<button class= "btn btn-lg btn-default btn-block" style = "color:rgba(128,128,128,0.9)">Submit!</button>	<!-- btn-block has the button use same width, primay makes blue  -->
				</div>
			</form>
			<a href="/foods" style = "color:rgba(128,128,128,0.9) !important">GO BACK</a>
		</div>	
	</div>
</div>
<% include ../partials/footer %>